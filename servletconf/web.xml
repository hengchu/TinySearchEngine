<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>TinySearchEngine</display-name>

	<servlet>
		<servlet-name>fileservlet</servlet-name>
		<servlet-class>com.tinysearchengine.searchengine.servlet.FileServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>searchservlet</servlet-name>
		<servlet-class>com.tinysearchengine.searchengine.servlet.SearchServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>fileservlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>searchservlet</servlet-name>
		<url-pattern>/searchresult</url-pattern>
	</servlet-mapping>
	
</web-app>
